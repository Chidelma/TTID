{
    "compilerOptions": {
        "strict": true,
        "outDir": "bin",
        "target": "ESNext",
        "module": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["bun-types", "node"],
        "isolatedModules": true
    }
}